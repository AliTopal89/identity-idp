window.LoginGov.I18n = {
  strings: {},
  t: function(key, args) {
    args = args || {};

    if ('count' in args) {
      if (args.count === 1) {
        key += '.one';
      } else {
        key += '.other';
      }
    }

    return this.strings[key];
  }
};

<% keys.each do |key| %>
